@{
    ViewBag.Title = "Home Page";

    Layout = "~/Views/Shared/_LayouthomePage.cshtml";
}

<div class="jumbotron">
    <h1>Welcome To Our Big Market </h1>
    <p class="lead"> we are the lead Of All Products. </p>
    <p><a href="/home/category" class="btn btn-primary btn-lg">Shop Now  &raquo;</a></p>

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active" style="max-height:400px">
              
                <img style="max-height:400px" src="~/Upload/samsung.png" alt="Los Angeles">
            </div>

            <div class="item" style="max-height:400px">
                <img style="max-height:400px" src="~/Upload/tvs.jpg" alt="Los Angeles">
            </div>

            <div class="item" style="max-height:400px">
                <img  style="max-height:400px" src="~/Upload/fastfood.jpg" alt="Los Angeles">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>

