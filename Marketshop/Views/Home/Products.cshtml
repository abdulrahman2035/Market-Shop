@model IEnumerable<Product>

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_LayouthomePage.cshtml";
}

<h2>Products</h2>



<div class="row">

    @foreach (var item in Model)
    {



        <div class="col-md-4">
            <h2> <a href="/Home/product_Details">  @item.Name </a> </h2>
            <p>
                <img width="300" height="200" src="~/Upload/@item.Image" />
            </p>
            <p><a class="btn btn-default" href="/Home/product_Details/@item.id"> Buy Now  &raquo;</a></p>
        </div>





    }


</div>